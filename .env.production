# IsoCrop Production Environment Variables
# Copy this file to .env and configure for your environment

# Application Settings
ENV=production
NODE_ENV=production

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# URLs (adjust for your domain)
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
# For production with domain:
# BACKEND_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE=50MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif,bmp,tiff

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production

# Database (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (if using for caching/queues)
# REDIS_URL=redis://localhost:6379

# API Keys (if needed)
# TINIFY_API_KEY=your-tinypng-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
WORKERS=4
THREAD_POOL_SIZE=10
MAX_CONCURRENT_CROPS=5

# Storage Paths (Docker volumes will override these)
UPLOAD_DIR=/app/uploads
EXPORT_DIR=/app/exports
TEMP_DIR=/app/temp
LOG_DIR=/app/logs

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ADMIN_EMAIL=admin@yourdomain.com